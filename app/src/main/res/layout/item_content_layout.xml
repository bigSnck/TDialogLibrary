<?xml version="1.0" encoding="utf-8"?>
<com.zthy.dialog.base.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ui_list_item_bg"
    android:clickable="true"
    android:gravity="center"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="24dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"

    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:textSize="16sp"
        android:textColor="@color/xui_config_color_gray_4"
        android:text="MC:"></TextView>
    <TextView
        android:id="@+id/x_dialog_list_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:ellipsize="end"
        android:gravity="left"
        android:lineSpacingExtra="3dp"
        android:maxLines="1"
        android:paddingLeft="6dp"
        android:paddingTop="10dp"
        android:paddingRight="24dp"
        android:paddingBottom="10dp"
        android:text="12313AAA121"
        android:textColor="#000000"
        android:textSize="20sp"></TextView>
    <ImageView
        android:id="@+id/x_dialog_list_item_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:paddingRight="12dp"
        android:src="@drawable/checkbox_ui_bg">

    </ImageView>
</com.zthy.dialog.base.XLinearLayout>

