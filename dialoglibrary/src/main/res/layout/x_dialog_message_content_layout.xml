<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zthy.dialog.base.XLinearLayout
        android:id="@+id/x_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ui_s_linearlayout"
        android:gravity="center"

        android:orientation="vertical"
        android:paddingTop="12dp"

        >

        <TextView
            android:id="@+id/x_dialog_message_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="标题"
            android:textColor="@color/xui_config_color_black"
            android:textSize="17sp">

        </TextView>

        <com.zthy.dialog.base.scrollview.XUIWrapContentScrollView

            android:id="@+id/x_dialog_message_content_scrollview"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:scrollbars="none">


            <TextView
                android:id="@+id/x_dialog_message_content_tv"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lineSpacingExtra="3dp"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:paddingRight="12dp"
                android:paddingBottom="26dp"
                android:text="确定要发送吗?"
                android:textColor="@color/xui_config_color_gray_4"
                android:textSize="16sp"></TextView>


        </com.zthy.dialog.base.scrollview.XUIWrapContentScrollView>

        <LinearLayout

            android:id="@+id/x_dialog_message_bottom_xll"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp">

            <TextView

                android:id="@+id/x_dialog_message_bottom_cancle_tv"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="取消"

                android:textColor="@color/xui_config_color_blue"

                android:textSize="14sp"


                android:visibility="gone">

            </TextView>

            <TextView
                android:id="@+id/x_dialog_message_bottom_ok_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="确定"
                android:textColor="@color/xui_config_color_blue"
                android:textSize="14sp"

                android:visibility="gone">

            </TextView>
        </LinearLayout>

    </com.zthy.dialog.base.XLinearLayout>

</merge>
